##Solving c++--

#include <iostream>

using namespace std;

int main()
{
   int n,m=0;
   cin>>n;
   string a;
   cin>>a;
   for (int i=0;i<n;i++){
    if (a[i]==a[i+1]){
        m++;
    }
   }
   cout<<m;



    return 0;
}
###solving python---

x=int(input())
y=input()
count=0
for i in range(0,x-1):
    if y[i]==y[i+1]:
        count=count+1
print(count)
